<header class="main-header">
  <div class="navbar">
    <%= link_to 'Healthy News', root_path, class: "logo" %>
    <nav class="main-nav">
      <ul>
        <div class="nav-left">
          <li><%= link_to 'Newest',   '#' %></li>
          <li><%= link_to 'Submit', new_post_path %></li>
        </div>
        <div class="nav-right">
          <% if user_signed_in? -%>
            <li><%= current_user.username %></li>
            <li><%= link_to 'Logout', destroy_user_session_path,
                                        :method => :delete %></li>
          <% else -%>
            <li><%= link_to 'Login', new_user_session_path %></li>
            or
            <li><%= link_to 'Register', new_user_registration_path %></li>
          <% end -%>
        </div>
      </ul>
    </nav>
  </div>
</header>